{
  "pipeline_name": "databricks_uc_to_volume_delta",
  "environment": "dev",
  "execution_context": {
    "attach_audit_meta": false
  },
  "source": {
    "system_type": "databricks",
    "extraction_mode": "batch",
    "connection": {
      "system_type": "databricks",
      "catalog": "main",
      "schema_name": "source_schema"
    },
    "batch": {
      "kind": "query",
      "query": "SELECT * FROM main.source_schema.source_table WHERE ds = :logical_date",
      "args": {"logical_date": "2025-01-01"}
    }
  },
  "sink": {
    "system_type": "databricks",
    "location_type": "volume",
    "mode": "batch",
    "format": "delta",
    "connection": {
      "system_type": "databricks"
    },
    "volume_path": "/tmp/metabricks_test_volume",
    "folder_path": "delta_tables",
    "object_name": "dest_delta_table",
    "write_mode": "overwrite",
    "format_options": {}
  }
}
